<%- include("partials/header") %>


  <form action="/create-post-form" method="GET">
    <button class="add-post-btn">+ New</button>
  </form>

  <% if (posts.length === 0) { %>
    <div class="no-posts-title">No posts yet!</div>
  <% } else { %>
    <div class="posts-container">
      <% posts.forEach((post, index) => { %>
        <a href="/post/<%= post.id %>" class="post-card">
          <% if (post.imageUrl) { %>
            <img src="<%= post.imageUrl %>" alt="<%= post.title %>" />
          <% } %>
          <div class="post-meta">
            <span class="author-name"><%= post.authorName || 'Unknown' %></span>
            <span class="dot">â€¢</span>
            <span class="publish-date"><%= post.publishDate.toDateString() %></span>
          </div>
          <h3><%= post.title %></h3>
          <p><%= shortDescriptions[index] %></p>
        </a>
      <% }) %>
    </div>
  <% } %>


<%- include("partials/footer") %>
